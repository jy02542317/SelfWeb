@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    @*<link rel="stylesheet" href="/Content/boostrap.min.css" />*@
    <style>
        html {
            padding: 0;
            margin: 0;
        }

        body {
            background: #808080;
            color: white;
            padding: 0;
            margin: 0;
            filter: alpha(opacity=50); /*IE滤镜，透明度50%*/
            -moz-opacity: 0.5; /*Firefox私有，透明度50%*/
            opacity: 0.5; /*其他，透明度50%*/
        }

        .menu {
            margin-top:50px;
        }

        .menu-ul {
            line-height: 35px;
            cursor: pointer;
            padding: 0 0 0 15%;
            margin: 0;
            list-style: none;
            width: 85%;
        }

        .menu-li {
            list-style: none;
            line-height: 35px;
            cursor: pointer;
            width: 80%;
            font-size: 14px;
            padding-left: 20%;
        }

        /*.menu-li:hover {
                background-color: #4cff00;
            }*/

        .selectedmenu {
            background-color: #131ef5;
        }
    </style>
    <script src="/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $(".menu-ul").click(function () {
                if ($(this).children("li").css("display") == "none") {
                    $(this).children("li").slideDown();
                }
                else {
                    $(this).children("li").slideUp();
                }
                return false;
            });

            $(".menu-li").click(function () {
                $(".selectedmenu").removeClass("selectedmenu");
                $(this).addClass("selectedmenu");
                var url = $(this).data("url");
                if (url != undefined)
                {
                    parent.gopage(url);
                }
                
                return false;
            });
        });
    </script>
</head>
<body>
    <div class="menu">
        <ul class="menu-ul">
            系统管理
            <li class="menu-li" data-url="/Article/Index">
                角色管理
            </li>
            <li class="menu-li">菜单管理</li>
        </ul>
        <ul class="menu-ul">
            日志管理
            <li class="menu-li">文章管理</li>
            <li class="menu-li">回复管理</li>
        </ul>

    </div>
</body>
</html>
